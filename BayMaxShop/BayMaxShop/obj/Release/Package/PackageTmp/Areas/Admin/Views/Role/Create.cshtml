@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole
@{
    ViewBag.Title = "Thêm Mới Quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a  href="/admin/role" class="nav-link">Danh Sách Quyền</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/admin/role" >Danh sách quyền</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card" style="background: linear-gradient(to right, #F2F2F2, #DBDBDB); " >
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

        </div>
        <div class="card-body" style="margin-left: 520px;">
            @using (Html.BeginForm("Create", "Role",FormMethod.Post)) {
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()
                <div  style="width: 350px;"  class="form-group">
                    <label style="margin-left: 130px;">Tên Quyền</label>
                    @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    <button style=" margin-left: 125px;" type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>