@model BayMaxShop.Models.EF.Menu
@{
    ViewBag.Title = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh Mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chỉnh Sửa Danh Mục</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 style="color: black;">Chỉnh Sửa Danh Mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/admin/category">Danh mục</a></li>
                    <li class="breadcrumb-item active">Sửa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div style="background: linear-gradient(to right, #F2F2F2, #DBDBDB); " class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới danh mục</h3>
        </div>
        <div class="card-body">
            <div class="card-body">
                <div class="bs-stepper-content">
                    @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.Id);
                        <!-- your steps content here -->
                        <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên danh mục</label>
                                @Html.TextBoxFor(x => x.MenuName, new { @class = "form-control", @placehoder = "Tên danh mục" })
                                @Html.ValidationMessageFor(x => x.MenuName, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLink">Link</label>
                                @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Link, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Thứ tự</label>
                                @Html.TextBoxFor(x => x.Position, new { @class = "form-control", })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Seo title</label>
                                @Html.TextAreaFor(x => x.SeoTitle, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Seo Description</label>
                                @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Seo Keywords</label>
                                @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <a style="background-color: #B58499;" href="/admin/category" class="btn btn-danger">Quay lại</a>
                                <button style="background-color: #848FB3;" type="submit" class="btn btn-primary">Lưu Lại</button>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
